{
    "compileOnSave": false,
    "compilerOptions": {
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "module": "commonjs",
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es5",
      "allowJs": true,
      "lib": [
        "es2017",
        "dom"
      ]
    },
    "include": [
      "src/client/**/*",
      "src/common/**/*"
    ],
    "exclude": [
      "src/server/**/*",
      "**/*.spec.ts"
    ]
}
